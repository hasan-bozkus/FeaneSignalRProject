@model CreateMailDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

@section Scripts {
    <link href="~/ckeditor/plugins/codesnippet/lib/highlight/styles/monokai.css" rel="stylesheet" />
    <link href="~/ckeditor/plugins/codesnippet/lib/highlight/styles/monokai_sublime.css" rel="stylesheet" />
    <script src="~/ckeditor/plugins/codesnippet/lib/highlight/highlight.pack.js"></script>
    <script src="~/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("editorid", {
            extraPlugins: 'codesnippet, youtube, video',
            youtube_responsive: true,
            youtube_disabled_fields: ['chkResponsive'],
            codesnippet_theme: 'monokai_sublime',
            customConfig: "~/ckeditor/config.js"
        });
        hljs.initHiglightingOnLoad();
    </script>
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">E-Posta Sayfası</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" enctype="multipart/form-data">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">E-Posta Gönderme Paneli</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="receivermail">Alıcı E-Posta Giriniz</label>
                                <input type="email" asp-for="ReceiverMail" class="form-control" id="receivermail">
                            </div>

                            <div class="form-group">
                                <label for="subject">Konu Giriniz</label>
                                <input type="text" asp-for="Subject" class="form-control" id="subject">
                            </div>

                            <div class="form-group">
                                <label for="username">Mesajınız</label>
                                <textarea rows="5" asp-for="Body" class="form-control" id="editorid"> </textarea>
                            </div>

                            <div class="form-group">
                                <label for="attachment">Ek</label>
                                <input type="file" asp-for="Attachment" class="form-control" id="attachment" />
                            </div>

                            <div class="card-action">
                                <button class="btn btn-primary">Gönder</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
