@model UpdateNotificationDto
@{
    ViewData["Title"] = "UpdateNotification";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Bildirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">

                        <input type="hidden" asp-for="NotificationID" />

                        <div class="card-header">
                            <div class="card-title">Bildirim Güncelleme</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="categoryname">Bildrimi Türü</label>
                                <input type="text" asp-for="Type" class="form-control" id="categoryname">
                            </div>
                            <div class="form-group">
                                <label for="categoryname">Bildirim İkonu</label>
                                <input type="text" asp-for="Icon" class="form-control" id="categoryname">
                            </div>
                            <div class="form-group">
                                <label for="categoryname">Açıklama</label>
                                <input type="text" asp-for="Description" class="form-control" id="categoryname">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Bildirimi Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

