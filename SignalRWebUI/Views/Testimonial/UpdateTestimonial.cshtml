@model UpdateTestimonialDto
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Müşteri Yorum İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Müşteri Yorum Güncelleme</div>
                        </div>

                        <input type="hidden" asp-for="TestimonialID" />

                        <div class="card-body">
                            <div class="form-group">
                                <label for="name">Müşteri Adını Giriniz</label>
                                <input type="text" asp-for="Name" class="form-control" id="name">
                            </div>
                            <div class="form-group">
                                <label for="title">Müşteri Ünvanını Giriniz</label>
                                <input type="text" asp-for="Title" class="form-control" id="title">
                            </div>
                            <div class="form-group">
                                <label for="imageurl">Müşteri Resim Dosya Yolunu Giriniz</label>
                                <input type="text" asp-for="ImageUrl" class="form-control" id="imageurl">
                            </div>
                            <div class="form-group">
                                <label for="description">Müşteri Yorumunu Giriniz</label>
                                <input type="text" asp-for="Description" class="form-control" id="description">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Yorumu Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

