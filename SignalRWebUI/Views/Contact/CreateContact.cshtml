@model CreateContactDto
@{
    ViewData["Title"] = "CreateContact";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title"> Ana Sayfa İletişim Bilgi İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni İletişim Yazısı Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="location">Lokasyonu Giriniz</label>
                                <input type="text" asp-for="Location" class="form-control" id="location">
                            </div>
                            <div class="form-group">
                                <label for="phonenumber">Telefo Numarası Giriniz</label>
                                <input type="text" asp-for="PhoneNumber" class="form-control" id="phonenumber">
                            </div>
                            <div class="form-group">
                                <label for="mail">Email Adresi Giriniz</label>
                                <input type="email" asp-for="Mail" class="form-control" id="mail">
                            </div>
                            <div class="form-group">
                                <label for="footerdescription">Açıklamayı Giriniz</label>
                                <input type="text" asp-for="FooterDescription" class="form-control" id="footerdescription">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">İletişim Bilgi Yazısı Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

