@model UpdateSocialMediaDto
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal Medya İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Sosyal Medya Hesabı Güncelleme</div>
                        </div>

                        <input type="hidden" asp-for="SocialMediaID" />

                        <div class="card-body">
                            <div class="form-group">
                                <label for="title">Başlık Giriniz</label>
                                <input type="text" asp-for="Title" class="form-control" id="title">
                            </div>
                            <div class="form-group">
                                <label for="icon">İkon Giriniz</label>
                                <input type="text" asp-for="Icon" class="form-control" id="icon">
                            </div>
                            <div class="form-group">
                                <label for="url">Link Giriniz</label>
                                <input type="text" asp-for="Url" class="form-control" id="url">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Sosyal Medya Hesabını Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
