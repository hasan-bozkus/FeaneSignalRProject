@model CreateAboutDto
@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ana Sayfa Hakkımda İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Hakkımızda Sayfası Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="title">Başlıkığı Giriniz</label>
                                <input type="text" asp-for="Title" class="form-control" id="title">
                            </div>
                            <div class="form-group">
                                <label for="imageurl">Görselin Url'ini Giriniz</label>
                                <input type="text" asp-for="ImageUrl" class="form-control" id="imageurl">
                            </div>
                            <div class="form-group">
                                <label for="description">Açıklamayı Giriniz</label>
                                <textarea rows="5" asp-for="Description" class="form-control" id="description"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Hakkımızda Yazısını Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

